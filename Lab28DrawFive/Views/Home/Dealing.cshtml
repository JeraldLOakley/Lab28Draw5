
@{
    ViewBag.Title = "The cards have been dealt!";
}

<h2>Dealing</h2>

<div class="jumbotron">
    <h1>Draw 5</h1>
</div>
@if (ViewBag.Cards == null)
{
    ViewBag.Message = "Shuffle the deck before beginning";



}
else
{



    for (int i = 0; i < ViewBag.Cards.Count; i++)
    {
        <div>
            <span>
                <img src="@ViewBag.Cards[i].image" width="120" />


                @ViewBag.Cards[i].value @ViewBag.Cards[i].suit
            </span>
        </div>
    }
    <div>
        @ViewBag.Remaining
    </div>
    <div class="btn btn-primary">@Html.ActionLink("Shuffle deck", "NewDeck")</div>
    <div class="btn btn-primary">@Html.ActionLink("Draw 5", "Dealing")</div>
}